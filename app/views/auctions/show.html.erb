  <image src="<%=url_for(@auction.image)%> height=150 width=150">
<% end %>
<h2>Acution Details</h2>
<p>
  <strong>Title:</strong>
  <%= @auction.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @auction.description %>
</p>

<p>
  <strong>Expiration date:</strong>
  <%= @auction.expiration_date %>
</p>

<p>
  <strong>Starting price:</strong>
  <%= @auction.starting_price %>
</p>

<p>
  <strong>Price:</strong>
  <%= @auction.price %>
</p>

<p>
  <strong>Status:</strong>
  <%= @auction.status %>
